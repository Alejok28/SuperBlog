<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_for @post do |f| %>
        <h1><%= form_title %></h1>
        <% if @post.errors.any? %>
          <div class="alert alert-danger">
            <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%=f.label :title%>
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el título de la publicación", autofocus:true%>
        </div>
        <div class="form-group">
          <%=f.label :description%>
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa el cuerpo de la publicación" %>
        </div>
        <div class="form-group">
          <%= f.submit form_title, class: "btn btn-primary" %>
        </div>
      <% end %>

  </div>
</div>
